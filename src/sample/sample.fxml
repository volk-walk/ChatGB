<BorderPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml"  >
    <stylesheets>
        <URL value="@/CSS/style.css"/>
    </stylesheets>
<center>
    <VBox>
        <TextArea fx:id="winChat" VBox.vgrow="ALWAYS"/>
    </VBox>
</center>

    <bottom>
        <HBox>
            <TextField fx:id="textFieled" HBox.hgrow="ALWAYS" onAction="#clickSend" />
            <Button text="Send" onAction="#clickSend"/>
        </HBox>
    </bottom>

</BorderPane>

